<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<title>thibault delgrande</title>
		<style>
			body {
				margin: 0;
				font-family: Arial, sans-serif;
			}
			#spinner-container {
				background-color: rgba(0, 0, 0);
				position: fixed;
				top: 0;
				left: 0;
				width: 100vw;
				height: 100vh;
				display: flex;
				justify-content: center;
				align-items: center;
				transition: opacity 0.5s;
				color: white;
				display: flex;
				flex-direction: column;
				user-select: none;
			}

			.hidden {
				opacity: 0;
			}

			.loader {
				width: 48px;
				height: 48px;
				display: inline-block;
				position: relative;
			}
			.loader::after,
			.loader::before {
				content: '';
				box-sizing: border-box;
				width: 48px;
				height: 48px;
				border-radius: 50%;
				border: 2px solid #FFF;
				position: absolute;
				left: 0;
				top: 0;
				animation: animloader 2s linear infinite;
			}
			.loader::after {
				animation-delay: 1s;
			}

			@keyframes animloader {
				0% {
					transform: scale(0);
					opacity: 1;
				}
				100% {
					transform: scale(1);
					opacity: 0;
				}
			}
		</style>
	</head>
	<body>
		<div id="spinner-container">
			<div class="loader"></div>
			<div id="loading">Chargement ...</div>
			<div id="url"></div>
		</div>
		{{ encore_entry_script_tags('main') }}
	</body>
</html>
